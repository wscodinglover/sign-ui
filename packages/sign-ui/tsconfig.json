{
  // "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "baseUrl": "./",
    "jsx": "react-jsx",
    "lib": ["dom", "ES2017"],
    "module": "ESNext",
    "rootDir": "src",
    "outDir": "dist",
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "isolatedModules": true,
    "moduleResolution": "Node",
    "preserveWatchOutput": true,
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "target": "es6",
    "skipLibCheck": true,
    "stripInternal": true,
    "paths": {
      "@sign-ui/*": ["./src/components/*"],
      "@utils/*": ["./src/utils/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@themes/*": ["./src/themes/*"],
      "@animations/*": ["./src/animations/*"]
    }
  },
  "rootDir": "src",
  "exclude": ["node_modules", "lib", "es", "dist"]
}
