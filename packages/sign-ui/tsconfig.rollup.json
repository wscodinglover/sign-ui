{
  "compilerOptions": {
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "module": "ESNext",
    "declaration": true,
    "outDir": "./dist",
    "paths": {
      "@sign-ui/*": ["./src/components/*"],
      "@utils/*": ["./src/utils/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@themes/*": ["./src/themes/*"],
      "@animations/*": ["./src/animations/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
